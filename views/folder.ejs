<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Folders</title>
    <link
            rel="stylesheet"
            href="/css/style.css"
    >
    <script src="/scripts/rename.js"></script>
</head>
<body>
<%- include("partials/header.ejs") %>
<div id="container">
    <h1>Folders</h1>
    <% if (user) { %>
        <form
                action=""
                method="post"
        >
            <button type="submit">Add folder</button>
        </form>

        <div id="folders-container">
            <% folders.forEach((folder) => { %>
                <div class="folder-container">
                    <a
                            class="folder-link"
                            href="/folder<%= folder.path %>"
                    ><%= folder.name %></a>
                    <button onclick="renameHandler(<%= folder.id%>)">Rename</button>
                    <form id="rename-form<%=folder.id%>" action="/folder/rename<%= folder.path%>" method="post">
                        <input type="hidden" name="folderId" value="<%= folder.id%>">
                        <button type="submit">Rename</button>
                    </form>
                </div>
            <% }) %>
        </div>
    <% } %>

</div>

</body>
</html>