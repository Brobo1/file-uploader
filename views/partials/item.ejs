<tr
        class="hover:bg-gray-100 dark:hover:bg-[#0d1421] cursor-pointer"
        onclick="<%= type === 'folder' ? `window.location.href='/folder/${id}'` : '' %>"
>
    <td class="px-4 py-4 text-sm font-medium text-gray-700 whitespace-nowrap">
        <div class="inline-flex items-center gap-x-3">
            <div class="flex items-center gap-x-2">
                <div class="bgred flex items-center justify-center w-8 h-8 text-blue-500 bg-blue-100 rounded-full dark:bg-gray-800">
                    <svg width="16"
                         height="16"
                         fill="currentColor"
                         class="text-black dark:text-white "
                         viewBox="0 0 16 16"
                    >
                        <% if(type === "folder") { %>
                            <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v7a1.5 1.5 0 0 1-1.5 1.5h-11A1.5 1.5 0 0 1 1 12.5zM2.5 3a.5.5 0 0 0-.5.5V6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3zM14 7H2v5.5a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 .5-.5z"/>
                        <% } else { %>
                            <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z"/>
                        <% } %>
                    </svg>
                </div>

                <div>
                    <h2 class="font-normal text-gray-800 dark:text-white "><%= name %></h2>
                </div>
            </div>
        </div>
    </td>
    <td class="px-4 py-4 text-sm font-normal text-gray-700 whitespace-nowrap">
        <%= type === "folder" ? "-" : size + "b" %>
    </td>
    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap">
        <%= formatDate(createdAt) %>
    </td>
    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap">
        Jan 4, 2022
    </td>
    <td class="text-sm whitespace-nowrap px-4">
        <div  x-data="{ isOpen: false }"
             class="flex items-center"
        >

            <div class="relative ">
                <!-- Menu toggle button -->
                <button @click.stop="isOpen = !isOpen"
                        class="relative z-10 block p-1 transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80"
                >
                    <svg class="w-6 h-6 text-white"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke="currentColor"
                    >
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"
                        />
                    </svg>
                </button>

                <!-- Menu list -->
                <div x-show="isOpen"
                     x-cloak
                     @click.away="isOpen = false"
                     x-transition:enter="transition ease-out duration-100"
                     x-transition:enter-start="opacity-0 scale-90"
                     x-transition:enter-end="opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-100"
                     x-transition:leave-start="opacity-100 scale-100"
                     x-transition:leave-end="opacity-0 scale-90"
                     class="fixed right-36 z-20 w-48 mt-2 overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800"
                >

                    <a @click.stop
                       onclick="renameHandler(<%= id %>, '<%= type %>')"
                       class="block px-4 py-2 text-sm text-gray-800 transition-colors duration-300 transform  dark:text-gray-200 dark:border-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700"
                    >Rename
                        <span class="text-gray-600 dark:text-gray-400">IMAGE</span></a>
                    <%if(type === "file") {%>
                        <a href="/folder/<%=id%>/download" @click.stop
                           class="block px-4 py-2 text-sm text-gray-800 transition-colors duration-300 transform  dark:text-gray-200 dark:border-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700"
                        >Download
                            <span class="text-gray-600 dark:text-gray-400">IMAGE</span></a>
                    <%}%>
                    <a @click.stop
                       onclick="deleteHandler(<%= id %>, '<%= type %>')"
                       class="block px-4 py-2 text-sm text-gray-800 transition-colors duration-300 transform border-t dark:text-gray-200 dark:border-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700"
                    >Delete
                        <span class="text-gray-600 dark:text-gray-400">IMAGE</span></a>
                </div>
            </div>
        </div>
    </td>
    <%- include("../modals/rename.ejs", {type: type, id: id, name: name}) %>
</tr>
