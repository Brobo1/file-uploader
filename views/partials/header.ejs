<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Folders</title>

    <link rel="icon" href="/assets/safe2-fill.svg">
    <link rel="stylesheet" href="/css/output.css">

    <script src="/scripts/dist/bundle.js" defer></script>
</head>
<body>
<%- include("loader.ejs") %>

<header class="bg-white dark:bg-gray-900 shadow-md">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
        <div class="flex items-center justify-between py-4">
            <!-- Logo Section -->
            <div class="flex items-center space-x-4">
                <% if (user) { %>
                    <a href="/folder" class="text-2xl font-bold text-gray-800 dark:text-gray-200 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                        FoldersApp
                    </a>
                <% } else { %>
                    <a href="/login" class="text-2xl font-bold text-gray-800 dark:text-gray-200 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                        FoldersApp
                    </a>
                <% } %>
            </div>

            <!-- Navigation / User Info -->
            <nav id="main-navigation" class="hidden md:flex items-center space-x-6">
                <% if (!user) { %>
                    <a href="/login" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                        Login
                    </a>
                    <a href="/signup" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                        Signup
                    </a>
                <% } else { %>
                    <!-- Logged-in User Section -->
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-800 dark:text-gray-200">
                            Hi, <b><%= user.username %></b>!
                        </span>
                        <a href="/logout" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-red-500 dark:hover:text-red-400 transition-colors duration-200" data-id="load">
                            Logout
                        </a>
                    </div>
                <% } %>
            </nav>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 md:hidden focus:outline-none focus:ring-2 focus:ring-blue-400">
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M4 6h16M4 12h16m-7 6h7"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu (Hidden by Default) -->
    <div id="mobile-menu" class="hidden md:hidden bg-gray-50 dark:bg-gray-800">
        <div class="space-y-1 px-2 py-4">
            <% if (!user) { %>
                <a href="/login" class="block text-base font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                    Login
                </a>
                <a href="/signup" class="block text-base font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200" data-id="load">
                    Signup
                </a>
            <% } else { %>
                <span class="block text-base font-medium text-gray-700 dark:text-gray-300">
                    Hi, <b><%= user.username %></b>!
                </span>
                <a href="/logout" class="block text-base font-medium text-gray-700 dark:text-gray-300 hover:text-red-500 dark:hover:text-red-400 transition-colors duration-200" data-id="load">
                    Logout
                </a>
            <% } %>
        </div>
    </div>
</header>

<script>
	// Mobile Menu Toggle Logic
	const mobileMenuButton = document.getElementById('mobile-menu-btn');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton.addEventListener('click', () => {
		mobileMenu.classList.toggle('hidden');
	});
</script>